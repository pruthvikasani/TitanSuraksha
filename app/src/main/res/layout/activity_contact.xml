<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5bb7bc"
        android:orientation="vertical"
        android:layout_marginTop="50sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="5sp"
            android:padding="2sp"
            app:cardElevation="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/safety_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Help from Safety team"
                    android:gravity="center_horizontal"
                    android:textSize="23sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"/>

                <View
                    android:layout_width="100sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="1dp"
                    android:background="@color/blue">

                </View>
                <TextView
                    android:id="@+id/safety_team_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Contact: suraksha@titan.co.in"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="15sp"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="5sp"
            android:padding="2sp"
            app:cardElevation="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/technical_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Technical support"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:textSize="23sp" />

                <View
                    android:layout_width="100sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="1dp"
                    android:background="@color/blue"/>
                <TextView
                    android:id="@+id/technical_team_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Contact: titanbpm@titan.co.in"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="15sp"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>
